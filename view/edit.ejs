  <h1>EDIT USER</h1>
  <div class="row">
    <form class="col s12" action="/user/edit/:id" method="post">
      <div class="row">
        <div class="col s12">
          <div class="input-field inline">
            <input placeholder="<%= data.username%>" , id="username" type="text" class="validate" name="username" value="<%- data.username %>">
            <label for="first_name"></label>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col s12">
          <div class="input-field inline">
            <input placeholder="<%= data.email%>" id="email" type="email" class="validate" name="email" value="<%- data.email %>">
            <label for="email" data-error="wrong" data-success="right"></label>
          </div>
        </div>
      </div>

      <button class="waves-effect waves-light btn" type="submit">submit</button>
    </form>
