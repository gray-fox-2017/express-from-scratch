<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <!-- Compiled and minified CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/css/materialize.min.css">

  <!-- Compiled and minified JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/js/materialize.min.js"></script>

  <title>Express from scratch</title>
</head>

<body>
  <h1>USERS</h1>
  <div class="row">
    <form class="col s12" action="/user" method="post">
      <div class="row">
        <div class="col s12">
          <div class="input-field inline">
            <input placeholder="Username" , id="username" type="text" class="validate" name="username">
            <label for="first_name"></label>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col s12">
          <div class="input-field inline">
            <input placeholder="Email" id="email" type="email" class="validate" name="email">
            <label for="email" data-error="wrong" data-success="right"></label>
          </div>
        </div>
      </div>

      <button class="waves-effect waves-light btn" type="submit">submit</button>
    </form>
  </div>
  <div>
    <table class="striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>username</th>
          <th>email</th>
          <th>options</th>
        </tr>
      </thead>

      <tbody>
        <%
        data.forEach((d) => {
      %>
          <tr>
            <td>
              <%= d.id %>
            </td>
            <td>
              <%= d.username %>
            </td>
            <td>
              <%= d.email %>
            </td>
            <td>
            <a href="./user/edit/<%- d.id %>" ><button class="btn-floating waves-effect waves-light lightgreen">edit</button></a>
            <a href="./user/delete/<%- d.id %>" ><button class="btn-floating waves-effect waves-light lightgreen">delete</button></a>
          </td>
          </tr>
          <%
      })
      %>
  </div>
</body>

</html>